<%- include("header") %>

    <form action="/search" method="get">
        <label for="search">Search for a name:</label>
        <input type="text" id="search" name="q" value="<%= q %>">
        <button type="submit">Search</button>
    </form>
    <% for (let person of persons) { %>
        <p>
            <%= person.name %> (<%= person.age %>)
        </p>
        <% } %>

<%- include("footer") %>